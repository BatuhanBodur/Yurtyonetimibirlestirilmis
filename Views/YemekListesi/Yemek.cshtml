    <title>Haftalık Yemek Listesi</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        .container {
            max-width: 900px;
            width: 100%;
            padding: 20px;
            background-color: #007bff; /* Arka planı mavi yaptık */
            color: white; /* Yazı rengini beyaz yaptık, böylece okunabilir olur */
            border-radius: 10px; /* Köşeleri yuvarlak yapıyoruz */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Hafif gölge ekliyoruz */
            text-align: center;
        }
        h2 {
            margin-bottom: 20px;
        }
        table th, table td {
            text-align: center;
        }
        table {
            width: 100%;
            margin-top: 20px;
        }
        /* Tablo başlıkları */
        th {
            background-color: #0056b3; /* Başlıkları daha koyu mavi yapıyoruz */
            color: white;
        }
        /* Tablo hücre renkleri */
        td {
