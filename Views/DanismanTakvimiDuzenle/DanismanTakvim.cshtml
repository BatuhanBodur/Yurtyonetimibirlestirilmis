    <script>
        // Sidebar'ı açma fonksiyonu
        function showAppointmentDetails(name, date, time, phone) {
            var appointmentInfo = "Randevu sahibi: " + name + "<br>Randevu tarihi: " + date + "<br>Randevu saati: " + time + "<br>Telefon: " + phone;
            document.getElementById("appointment-info").innerHTML = appointmentInfo;
            document.getElementById("appointment-sidebar").classList.add("open");
        }

        // Sidebar'ı kapatma fonksiyonu
        function closeSidebar() {
            document.getElementById("appointment-sidebar").classList.remove("open");
        }
