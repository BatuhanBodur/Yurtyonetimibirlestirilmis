            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .container {
            max-width: 1200px;
            margin-top: 50px;
        }
        .calendar-container {
            margin-bottom: 20px;
            padding: 20px;
            border-radius: 10px;
            background-color: white;
        }
        .calendar-header {
            text-align: center;
            padding: 10px 0;
            margin-bottom: 20px;
            background-color: #007bff; /* Başlık için arka plan mavi */
            color: white;
            border-radius: 5px;
        }
        .calendar-table {
            width: 100%;
            table-layout: fixed;
            text-align: center;
        }
        .calendar-table th,
        .calendar-table td {
            padding: 15px;
            border: 1px solid #ddd;
            position: relative; /* Tooltip için gerekli */
        }
        .calendar-day {
            cursor: pointer;
        }
        .calendar-day:hover {
            background-color: #0056b3;
            color: white;
        }
        .available {
            background-color: #28a745;
            color: white;
        }
        .unavailable {
            background-color: #dc3545;
            color: white;
        }
        .appointment-details {
            margin-top: 10px;
        }
        .calendar-table th {
            background-color: #007bff; /* Saatlerin başlık arka planı mavi */
            color: white;
        }
        .calendar-table td {
            background-color: #f0f8ff; /* Günlerin arka planı açık mavi */
        }

        /* Sidebar Stil */
        .sidebar {
            position: fixed;
            top: 0;
            left: -300px; /* Başlangıçta gizli */
            width: 300px;
            height: 100%;
            background-color: #dc3545; /* Kırmızı arka plan */
            color: white;
            transition: 0.3s; /* Pencerenin kayma animasyonu */
            padding: 20px;
            font-size: 14px;
        }

        .sidebar h4 {
            margin-top: 0;
        }

        .sidebar .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            font-size: 20px;
            cursor: pointer;
            color: white;
        }

        .sidebar.open {
            left: 0; /* Pencere açıldığında sola kayacak */
        }

        .sidebar p {
            margin: 10px 0;
        }

        .calendar-day:hover .tooltip {
            display: block;
        }

        .tooltip {
            display: none;
            position: absolute;
            top: -40px;
            left: 0;
            background-color: #333;
            color: white;
            padding: 5px;
            border-radius: 5px;
            z-index: 10;
            font-size: 14px;
        }

    </style>
</head>
