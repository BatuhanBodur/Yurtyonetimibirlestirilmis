    <style>
        .container-center {
            max-width: 1200px; /* Set a larger width for the content area */
            width: 100%;
            margin: 0 auto; /* Automatically apply equal margins on both sides */
            text-align: center;
        }

        /* Only change background color of sidebar items and navbar items on hover */
        .list-group-item {
            color: black !important; /* Default text color */
        }

            .list-group-item:hover {
                background-color: #007bff !important; /* Blue color on hover */
                color: white !important; /* White text on hover */
            }

        .nav-link {
            color: black !important; /* Default text color */
        }

            .nav-link:hover {
                background-color: #007bff !important; /* Blue background on hover */
                color: white !important; /* White text on hover */
            }

        .dropdown-item {
            color: black !important; /* Default text color */
        }

            .dropdown-item:hover {
                background-color: #007bff !important; /* Blue background on hover */
                color: white !important; /* White text on hover */
            }

        /* Announcement card style */
        .announcement-card {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
            text-align: left;
        }

            .announcement-card img {
                width: 100%; /* Full width for the image */
                height: auto;
                border-radius: 5px;
                margin-bottom: 15px;
            }

            .announcement-card h5 {
                font-size: 1.25rem;
                font-weight: 600;
            }

            .announcement-card p {
                font-size: 1rem;
                color: #6c757d;
            }

            .announcement-card .btn {
                background-color: #007bff;
                color: white;
                border: none;
            }

                .announcement-card .btn:hover {
                    background-color: #0056b3;
                }

        /* Styling the Duyurular heading */
        h1.mt-4 {
            background-color: #007bff; /* Blue background */
            color: white; /* White text */
            padding: 15px; /* Padding around the text */
            border-radius: 5px; /* Optional: rounded corners */
            margin-bottom: 30px; /* Space below the heading */
        }
    </style>
</head>
